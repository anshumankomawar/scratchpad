{
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "store:allow-get",
    "store:allow-delete",
    "os:allow-os-type",
    "window:allow-set-title",
    "window:allow-toggle-maximize",
    "window:allow-set-fullscreen",
    "window:allow-set-decorations",
    "window:allow-set-effects",
    "window:allow-start-dragging",
    "window:allow-minimize",
    "window:allow-show",
    "os:allow-os-type",
    "fs:allow-appdata-read-recursive",
    "fs:allow-appdata-write-recursive",
    "fs:allow-lstat",
    "fs:write-all",
    "fs:read-all",
    "store:allow-set",
    {
      "identifier": "fs:allow-write",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPDATA/"
        },
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$APPDATA/**/*"
        },
        {
          "path": "$APPDATA/files/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-watch",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPDATA/"
        },
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$APPDATA/**/*"
        },
        {
          "path": "$APPDATA/files/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-unwatch",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPDATA/"
        },
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$APPDATA/**/*"
        },
        {
          "path": "$APPDATA/files/**/*"
        }
      ]
    }
  ]
}
